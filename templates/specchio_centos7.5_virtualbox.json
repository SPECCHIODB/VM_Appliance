{
    "variables": {
	"bridge_adapter": "eno1"
    },
    "builders": [
	{
	    "type": "virtualbox-iso",
	    "boot_command": [
		"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
	    ],
	    "shutdown_command": "echo 'specchio'|sudo -S /sbin/halt -h -p",
	    "boot_wait": "10s",
	    "http_directory": "http",
	    "iso_urls": [
		"http://pkg.adfinis-sygroup.ch/centos/7.5.1804/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso",
		"http://mirrors.mit.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso"
	    ],
	    "iso_checksum_type": "sha256",
	    "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
	    "guest_os_type": "RedHat_64",
	    "disk_size": 102400,
	    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
	    "guest_additions_url": "https://download.virtualbox.org/virtualbox/5.2.14/VBoxGuestAdditions_5.2.14.iso",
	    "guest_additions_sha256": "e149ff0876242204fe924763f9272f691242d6a6ad4538a128fb7dba770781de",
	    "virtualbox_version_file": ".vbox_version",
	    "vm_name": "specchio-centos-7.5-vbox-x86_64",
	    "vboxmanage": [
		[
		    "modifyvm",
		    "{{.Name}}",
		    "--memory",
		    "2048"
		],
		[
		    "modifyvm",
		    "{{.Name}}",
		    "--cpus",
		    "2"
		],
		[
		    "modifyvm", "{{.Name}}",
		    "--nic2", "bridged",
		    "--bridgeadapter2", "{{user `bridge_adapter`}}"
		],
		[
		    "modifyvm", "{{.Name}}",
		    "--vram", "128"
		]
	    ],
	    "ssh_username": "specchio",
	    "ssh_password": "specchio",
	    "ssh_wait_timeout": "500s"
	}
    ],
    "provisioners": [
	{
	    "type": "shell",
	    "inline": [
		"sudo yum install -y bzip2 gcc perl make kernel-devel",
		"sudo mount -t iso9660 -o loop /home/specchio/VBoxGuestAdditions_5.2.14.iso /media",
		"sudo /media/VBoxLinuxAdditions.run",
		"sudo umount /media",
		"rm -rf isomount /home/specchio/VBoxGuestAdditions_5.2.14.iso"
	    ]
	},
	{
	    "type": "shell",
	    "inline": [
		"sudo yum install -y epel-release",
		"sudo yum install -y ansible"
	    ]
	},
	{
	    "type": "ansible",
	    "playbook_file": "ansible/playbook.yml"
	}
    ],
    "post-processors": [
	{
	    "type": "vagrant",
	    "keep_input_artifact": true
	},
	{
	    "type": "checksum"
	}
    ]
}
